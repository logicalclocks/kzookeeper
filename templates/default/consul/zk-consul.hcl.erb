services = [
    {
        id = "client"
        name = "zookeeper"
        tags = [
            "client",
            "<%= @id %>"
        ]
        port = 2181
        check = {
            id = "zk-client-health"
            name = "Health check for ZooKeeper"
            args = ["<%= node['kzookeeper']['bin_dir'] %>/zk-health.sh"]
            interval = "20s"
            timeout = "20s"
            status = "passing"
        }
    },
    {
        id = "peer"
        name = "zookeeper"
        tags = [
            "peer",
            "<%= @id %>"
        ]
        port = 2888
        check = {
            id = "zk-peer-health"
            alias_service = "client"
        }
    },
    {
        id = "leader"
        name = "zookeeper"
        tags = [
            "leader",
            "<%= @id %>"
        ]
        port = 3888
        check = {
            id = "zk-leader-health"
            alias_service = "client"
        }
    }
]